<server port="1234">
  <endpoint>
    <url>/test1</url>
    <params>
      <param>testLimit</param>
    </params>
    <sources>
      <source>
	<url>http://dbpedia.org/sparql</url>
	<query>select ?s where {?s a &lt;http://dbpedia.org/ontology/Drug&gt;} limit $testLimit</query>
      </source>
      <source>
	<url>http://drugbank.bio2rdf.org/sparql</url>
	<query>select ?s where {?s a &lt;http://bio2rdf.org/drugbank_vocabulary:Drug&gt;} limit $testLimit</query>
      </source>
    </sources>
    <format>JSON-LD</format>
